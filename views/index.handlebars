<div class="container">
    <div class="row">
        <div class="col-xs-12 text-center" id="top-bar">
            <h1>Task Logger</h1>
        </div>
        <div class="col-xs-6 text-center task">
            <div class="row">
                {{#each logger_data}}
                    {{#unless this.completed}}
            <div class="col-xs-9 text-center">
                <pre>{{this.id}}, {{this.logger_name}}</pre>
            </div>
            <div class="col-xs-3 text-center">
                <form method="POST" action="/loggers/update?_method=PUT">
                    <input type="hidden" name="logger_id" type="text" value={{this.id}}>
                    <br>
                    <button type="submit" class="btn btn-default">
                        Completed
                    </button>
                </form>
            </div>
                {{/unless}}
                {{/each}}
            </div>
        </div>
    </div>
</div>